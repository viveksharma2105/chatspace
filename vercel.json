{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web/dist"
      }
    },
    {
      "src": "api/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "web/dist/$1"
    }
  ],
  "outputDirectory": "web/dist",
  "buildCommand": "cd web && npm run build",
  "installCommand": "npm install --prefix web && npm install --prefix api"
}
